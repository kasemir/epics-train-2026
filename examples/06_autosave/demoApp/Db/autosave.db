record(calc, "$(S):ramp")
{
  field(INPA, "$(S):ramp")
  field(INPB, "$(S):limit")
  field(INPC, "$(S):step")
  field(CALC, "(A<B)?(A+C):0")
  field(PREC, "2")
  field(SCAN, "1 second")
}

record(ai, "$(S):limit")
{
  info(autosaveFields, "VAL")
  field(INP,  "10")
  field(PREC, "2")
  field(PINI, "YES")
}

record(ai, "$(S):step")
{
  info(autosaveFields, "VAL")
  field(INP,  "1")
  field(PREC, "2")
  field(PINI, "YES")
}
